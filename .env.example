# Optional integrations
DISCORD_WEBHOOK=
ZABBIX_SERVER=
ZABBIX_HOST=

# Optional GHCR auth for private images
GHCR_USERNAME=oauth2
GHCR_TOKEN=

# Optional Docker Hub auth to avoid unauthenticated rate limits
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=

# Behavior toggles
UPDATE_SYSTEM_PACKAGES=false
ALLOW_LEGACY_DOCKER_RUN=false
DRY_RUN=false
LOG_FORMAT=text
DOCKER_TIMEOUT=15

# Comma-separated package blacklist for apt/dnf
BLACKLIST=
